FROM golang:1.21-alpine as builder

WORKDIR /app

COPY go.mod go.sum* ./
RUN go mod download || true

COPY . .
RUN go build -o deployment1 -gcflags="all=-N -l" .

FROM alpine:latest

RUN apk --no-cache add ca-certificates

COPY --from=builder /app/deployment1 /usr/local/bin/

EXPOSE 50051 8081

CMD ["deployment1"]
